ex () {
	case $1 in
		*.tar.(gz|bz2|xz|lzma|Z) ) bsdtar xvf $1;;
		*.(7z|zip|rar|gz|bz2) ) 7z x $1;;
		* ) echo "unrecognized file extension: '$1'" >&2
	esac
}
