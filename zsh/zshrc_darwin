## alias
alias dm='docker-machine --native-ssh'
alias ppproxy='http_proxy="http://127.0.0.1:2080" https_proxy="$http_proxy" all_proxy="$http_proxy"'
alias pcurl='ppproxy curl'
alias breww='ppproxy brew update && brew upgrade'
alias go='ppproxy go'
alias opam='ppproxy opam'
alias pnpm='ppproxy pnpm'
alias npm='ppproxy npm'

ipsb() {
    curl -s "https://api.ip.sb/geoip/$1" | python3 -m json.tool
}

ppp() {
    export http_proxy="socks5h://127.0.0.1:2080"
    export http_proxy="socks5://127.0.0.1:2080"
    export http_proxy="http://127.0.0.1:2080"
    export https_proxy="$http_proxy"
    export all_proxy="$http_proxy"
    echo "export http_proxy='$http_proxy'"
}
pppp() {
    unset http_proxy
    unset https_proxy
    unset all_proxy
    echo "unset http_proxy"
}
