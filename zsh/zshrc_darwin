source ~/.zshrc_grml
source ~/.zshrc_prompt

PYENV_ROOT="$HOME/.pyenv"
PATH="$PYENV_ROOT/shims:/usr/local/bin:/usr/local/sbin:$PATH"

export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"
eval "$(pyenv init -)"
pyenv virtualenvwrapper_lazy

export EDITOR="vim"
fpath=(/usr/local/share/zsh-completions $fpath)

## alias
alias cp="cp -r"
alias rm="rm -rvfi"
alias la="ls -A"
alias ll="ls -lhA"
alias ls="ls -vF"
alias du="du -h"
alias df="df -h"

# 工具
alias j="jobs -dl"
alias h="htop"
alias f="find . -name"
alias ssh="ssh -2"
alias py="python"
alias py3="python3"
alias py2="python2"

alias sss="python3 -m http.server"
alias ujs="uglifyjs -m -c unsafe=true"
#alias upgrade="brew outdated && brew upgrade"

alias nginx_start="sudo nginx"
alias nginx_restart="sudo nginx -s stop && sudo nginx"
alias nginx_stop="sudo nginx -s stop"
alias _start_nginx="sudo nginx"
alias _start_postgresql="postgres -D /usr/local/var/postgres"
alias _start_redis="redis-server /usr/local/etc/redis.conf"

zzz () {
    for i in "$@"; do
        7z a -tzip $i.zip $i;
    done
}
