## alias
alias rm="grm -Irv"
alias ls="gls --color=auto --group-directories-first -vF"
alias mvim="mvim -v"
alias breww="brew update && brew upgrade && brew cleanup -s && brew prune"
alias dm="docker-machine --native-ssh"
alias jsoo="js_of_ocaml --opt=3 --pretty"

# forward f port remote-port remote-host
# forward c port remote-port remote-host
forward() {
    case "$1" in
        "f") ssh -v -O forward -R 0.0.0.0:${3}:localhost:${2} ${4} ;;
        "c") ssh -v -O cancel -R 0.0.0.0:${3}:localhost:${2} ${4} ;;
    esac
}
ppp() {
    export all_proxy="socks5h://127.0.0.1:2080"
    export http_proxy="$all_proxy"
    export https_proxy="$all_proxy"
    echo "all_proxy='$all_proxy'"
}
pppp() {
    unset all_proxy
    unset http_proxy
    unset https_proxy
    echo "all_proxy='$all_proxy'"
}
