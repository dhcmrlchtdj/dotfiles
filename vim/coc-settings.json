{
    "suggest.echodocSupport": true,
    "suggest.triggerAfterInsertEnter": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": "",
    "diagnostic.level": "warning",
    "diagnostic.errorSign": "✖",
    "diagnostic.warningSign": "•",
    "codeLens.enable": true,
    "coc.preferences.extensionUpdateCheck": "never",
    "list.source.files.command": "rg",
    "list.source.files.args": ["--files"],
    "list.source.grep.command": "rg",
    "list.source.grep.args": ["--vimgrep", "--no-heading", "--smart-case"],
    "rust.clippy_preference": "on",
    "languageserver": {
        "ocaml": {
            "command": "ocamllsp",
            "filetypes": ["ocaml"]
        },
        "dart": {
            "command": "dart",
            "args": [
                "/usr/local/opt/dart/libexec/bin/snapshots/analysis_server.dart.snapshot",
                "--lsp"
            ],
            "filetypes": ["dart"],
            "disableDynamicRegister": true
        },
        "kotlin": {
            "command": "kotlin-language-server",
            "filetypes": ["kotlin"]
        },
        "swift": {
            "command": "sourcekit-lsp",
            "filetypes": ["swift"],
            "rootPatterns": [".git/", "Package.swift"]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp"],
            "rootPatterns": [".git/", ".ccls", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "clang": {
                    "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/10.0.1",
                    "extraArgs": [
                        "-isystem",
                        "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include/c++/v1",
                        "-I",
                        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include/"
                    ]
                }
            }
        },
        "golang": {
            "command": "gopls",
            "filetypes": ["go"],
            "rootPatterns": ["go.mod"]
        }
    }
}
