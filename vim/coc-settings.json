{
	"npm.binPath": "pnpm",
	"suggest.noselect": true,
	"suggest.enablePreselect": false,
	"suggest.snippetsSupport": false,
	"suggest.autoTrigger": "always",
	"suggest.triggerAfterInsertEnter": true,
	"suggest.defaultSortMethod": "none",
	"diagnostic.virtualText": false,
	"diagnostic.virtualTextPrefix": "",
	"diagnostic.level": "warning",
	"diagnostic.errorSign": "✖",
	"diagnostic.warningSign": "•",
	"codeLens.enable": true,
	"codeLens.position": "eol",
	"inlayHint.enable": false,
	"semanticTokens.enable": true,
	"list.previewSplitRight": true,
	"outline.sortBy": "position",
	"coc.source.file.ignoreHidden": false,
	// coc-lists
	"session.directory": "~/.local/share/nvim/session",
	// coc-eslint
	"eslint.workingDirectories": [{ "mode": "auto" }],
	// coc-tsserver
	"typescript.suggest.completeFunctionCalls": false,
	"javascript.suggest.completeFunctionCalls": false,
	"tsserver.useLocalTsdk": true,
	"languageserver": {
		"rust-analyzer": {
			"command": "rust-analyzer",
			"filetypes": ["rust"],
			"rootPatterns": ["Cargo.toml", ".git/"],
			"disableSnippetCompletion": true,
			"initializationOptions": {
				"checkOnSave": { "command": "clippy" }
			}
		},
		"ocamllsp": {
			"command": "ocamllsp",
			"filetypes": ["ocaml"],
			"rootPatterns": ["dune-project", ".git/"],
			"disableSnippetCompletion": true
		},
		"clangd": {
			"command": "clangd",
			"filetypes": ["c", "cpp"],
			"rootPatterns": [".git/"],
			"disableSnippetCompletion": true
		},
		"gopls": {
			"command": "gopls",
			"filetypes": ["go"],
			"rootPatterns": ["go.mod", ".git/"],
			"disableSnippetCompletion": true,
			"initializationOptions": {}
		}
	}
}
