{
    "semanticTokens.filetypes": ["c", "javascript", "typescript", "ocaml"],
    "suggest.echodocSupport": true,
    "suggest.enablePreview": true,
    "suggest.triggerAfterInsertEnter": true,
    "suggest.defaultSortMethod": "none",
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": "",
    "diagnostic.level": "warning",
    "diagnostic.errorSign": "✖",
    "diagnostic.warningSign": "•",
    "codeLens.enable": true,
    "codeLens.position": "eol",
    "coc.preferences.extensionUpdateCheck": "never",
    "coc.source.file.ignoreHidden": false,
    "rust-analyzer.server.path": "/opt/homebrew/bin/rust-analyzer",
    "rust-analyzer.updates.prompt": false,
    "rust-analyzer.updates.checkOnStartup": false,
    "rust-analyzer.inlayHints.enable": false,
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.lens.run": false,
    "languageserver": {
        "ocaml": {
            "command": "ocamllsp",
            "filetypes": ["ocaml"]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp"],
            "rootPatterns": [".git/", ".ccls", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "clang": {
                    "resourceDir": "/opt/homebrew/opt/llvm/lib/clang/12.0.0"
                }
            }
        },
        "golang": {
            "command": "gopls",
            "filetypes": ["go"],
            "rootPatterns": ["go.mod"],
            "initializationOptions": {}
        }
    }
}
