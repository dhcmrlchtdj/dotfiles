[core]
	editor = vim
	quotepath = false
	autocrlf = input
	whitespace = space-before-tab,trailing-space
[color]
	ui = true
[push]
	default = simple
[alias]
	st = status -bsu
	br = branch -vv
	co = checkout
	ad = add -A .
	au = add -u
	ci = commit -m
	amend = commit --amend
	df = diff --stat HEAD
	dff = diff HEAD
	l = log --graph --decorate --date=short --format=format:'%C(yellow)%h%Creset <%C(blue)%an%Creset@%C(cyan)%ad%Creset>%C(green)%d%Creset   %s'
	ll = log --graph --decorate --oneline -10
	rc = rm --cached -r .
	sm = submodule
    mt = mergetool
[merge]
	tool = vimdiff2
