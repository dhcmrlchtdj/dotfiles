[user]
    name = h11
    email = nirisix@gmail.com
    signingKey = 0x0006DD9CB2D67F50

[commit]
    gpgSign = true

[includeIf "gitdir/i:~/work/"]
    path = ~/.config/git/config.work

[core]
    editor = nvim
    quotePath = false
    whitespace = space-before-tab,trailing-space
    eol = native
    autocrlf = input
    safecrlf = warn
    trustctime = false
    pager = diff-so-fancy | less --tabs=4 -RFX

[color]
    ui = auto

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[grep]
    lineNumber = true
    extendedRegexp = true

[push]
    default = simple

[pull]
    rebase = true

[log]
    date = iso

[branch]
    autoSetupRebase = always

[diff]
    tool = vimdiff
    algorithm = histogram
    indentHeuristic = true

[difftool]
    prompt = false

[difftool "vimdiff"]
    path = nvim

[merge]
    tool = vimdiff

[mergetool]
    keepBackup = false
    prompt = false

[mergetool "vimdiff"]
    path = nvim

[alias]
    st = status -bsu
    br = branch -vv
    bra = branch -vva
    co = checkout
    ad = add -A .
    au = add -u :/
    ci = commit -m
    amend = commit --amend
    df = diff --stat HEAD
    dff = diff HEAD
    dffs = diff --cached HEAD
    dfw = diff HEAD --word-diff
    ll = log --graph --decorate --oneline -10
    l = log --graph --decorate --format=format:'%C(auto)%h%Creset <%C(blue)%an%Creset@%C(cyan)%ad%Creset>%C(auto)%d%Creset   %s'
    lc = log --graph --decorate --format=format:'%C(auto)%h%Creset <%C(blue)%cn%Creset@%C(cyan)%cd%Creset>%C(auto)%d%Creset   %s'
    ref = reflog --decorate -10
    rc = rm --cached -rf .
    mt = mergetool
    dt = difftool
    pp = pull -p
    mm = merge --no-ff
    mmx = merge --no-ff -Xtheirs
    cp = cherry-pick
    tt = "!_() { declare tag=\"$(date '+%Y-%m-%dT%H.%M.%S%z')${1:+_$1}\"; git tag $tag -am $tag; }; _"
    commit-empty = commit --allow-empty --allow-empty-message -m ""
