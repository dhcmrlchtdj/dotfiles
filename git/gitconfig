[core]
    editor = nvim
    pager = delta --light
    ; whitespace = space-before-tab,trailing-space
    eol = native
    autocrlf = false
    safecrlf = warn
    quotePath = false
    precomposeUnicode = true
    trustctime = false

[color]
    ui = auto

[grep]
    lineNumber = true
    extendedRegexp = true

[push]
    default = simple

[pull]
    rebase = true

[log]
    date = iso

[branch]
    autoSetupRebase = always

[rerere]
    enabled = true

[diff]
    tool = nvimdiff
    algorithm = histogram
    indentHeuristic = true

[difftool]
    prompt = false

[merge]
    tool = nvimdiff

[mergetool]
    keepBackup = false
    prompt = false

[alias]
    st = status -bsu
    br = branch -vv
    bra = branch -vva
    co = checkout
    ad = add -A .
    au = add -u :/
    ci = commit -m
    amend = commit --amend
    df = diff --stat HEAD
    dff = diff HEAD
    dffs = diff --cached HEAD
    dfw = diff HEAD --word-diff
    ll = log --graph --decorate --oneline -10
    l = log --graph --decorate --format=format:'%C(auto)%h%Creset <%C(blue)%an%Creset@%C(cyan)%ad%Creset>%C(auto)%d%Creset   %s'
    lc = log --graph --decorate --format=format:'%C(auto)%h%Creset <%C(blue)%cn%Creset@%C(cyan)%cd%Creset>%C(auto)%d%Creset   %s'
    ref = reflog --decorate -10
    rc = rm --cached -rf .
    mt = mergetool
    dt = difftool
    pp = pull -p
    mm = merge --no-ff
    mmx = merge --no-ff -Xtheirs
    cp = cherry-pick
    tt = "!_() { declare tag=\"$(date -u '+%Y-%m-%dT%H.%M.%SZ')${1:+_$1}\"; git tag $tag -am $tag; }; _"
    commit-empty = commit --allow-empty --allow-empty-message -m ""
