[user]
    name = niris
    email = nirisix@gmail.com

[include]
    path = ~/.gitconfig.filter

[core]
    editor = vim
    quotepath = false
    autocrlf = input
    whitespace = space-before-tab,trailing-space
    excludesfile = ~/.gitignore_global

[color]
    ui = true

[push]
    default = simple

[branch]
    autosetuprebase = always

[diff]
    tool = vimdiff
    ;algorithm = patience
    algorithm = histogram

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[mergetool]
    keepBackup = false
    prompt = false

[alias]
    st = status -bsu
    br = branch -vv
    bra = branch -vva
    co = checkout
    ad = add -A .
    au = add -u :/
    ci = commit -m
    amend = commit --amend
    df = diff --stat HEAD
    dff = diff HEAD
    dffs = diff --cached HEAD
    dfw = diff HEAD --word-diff
    l = log --graph --decorate --date=iso --format=format:'%C(yellow)%h%Creset <%C(blue)%an%Creset@%C(cyan)%ad%Creset>%C(green)%d%Creset   %s'
    ll = log --graph --decorate --oneline -10
    lc = log --graph --decorate --date=iso --format=format:'%C(yellow)%h%Creset <%C(blue)%cn%Creset@%C(cyan)%cd%Creset>%C(green)%d%Creset   %s'
    rc = rm --cached -rf .
    sm = submodule
    mt = mergetool
    dt = difftool
    pp = pull -p
    pu = pull -p upstream master
    mm = merge --no-ff
    mmx = merge --no-ff -Xtheirs
    cp = cherry-pick
    tt = "!_() { git tag $(date +%s)${1:+_$1}; }; _"
