[user]
    name = niris
    email = nirisix@gmail.com
[core]
    editor = vim
    quotepath = false
    autocrlf = input
    whitespace = space-before-tab,trailing-space
	excludesfile = ~/.gitignore_global
[color]
    ui = true
[push]
    default = simple
[branch]
    autosetuprebase = always
[alias]
    st = status -bsu
    br = branch -vv
    bra = branch -vva
    co = checkout
    ad = add -A .
    au = add -u :/
    ci = commit -m
    amend = commit --amend
    df = diff --stat HEAD
    dff = diff HEAD
    l = log --graph --decorate --date=short --format=format:'%C(yellow)%h%Creset <%C(blue)%an%Creset@%C(cyan)%ad%Creset>%C(green)%d%Creset   %s'
    ll = log --graph --decorate --oneline -10
    lc = log --graph --decorate --date=iso --format=format:'%C(yellow)%h%Creset <%C(blue)%cn%Creset@%C(cyan)%cd%Creset>%C(green)%d%Creset   %s'
    rc = rm --cached -rf .
    sm = submodule
    mt = mergetool
    dt = difftool
    pp = pull -p
    pu = pull -p upstream master
    mm = merge --no-ff
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = vimdiff
[mergetool]
    keepBackup = false
    prompt = false
