[user]
    name = niris
    email = smresc@gmail.com
[core]
    editor = vim
    quotepath = false
    autocrlf = input
    whitespace = space-before-tab,trailing-space,tabwidth=4
[color]
    ui = true
[alias]
    ad = add -A
    st = status -bs
    ci = commit
    br = branch
    co = checkout
    df = diff HEAD --stat
    dff = diff HEAD
    ll = log -10 --oneline --graph --decorate
    l = log --graph --decorate --date=short --pretty=format:'%C(yellow)%h%Creset <%C(blue)%an%Creset@%C(cyan)%ad%Creset>%C(green)%d%Creset %s'
